<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Custom styles for TextView with black font color-->

    <style name="SmallWhiteText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="SmallBlackText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="MediumBlackText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="LargeBlackText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="LargeBlackMyProfileText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:titleMarginBottom">30dp</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="LargeBlackMyProfileText1" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:titleMarginBottom">30dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="LargeBlackInvoiceText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:titleMarginBottom">30dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomLargeBlackMyProfileText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:titleMarginBottom">30dp</item>
    </style>

    <!--Custom styles for TextView with blue font color-->

    <style name="SmallBlueText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="MediumBlueText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="CustomMediumBlueText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="LargeBlueText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="LargeWhiteText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="LargeBlueMyProfileText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:maxLines">3</item>
    </style>


    <!--Custom styles for EditText -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <!--Custom styles for Information Screen -->
    <style name="CustomInformationEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <!--Custom styles for Button with blue background -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--Custom styles for Button with blue background -->
    <style name="CustomProfileButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--Custom styles for Click to proceed Button with blue background -->
    <style name="CustomProceedButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--Custom styles for horizontal view with black background -->
    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>
    <!--Custom styles for Custom Dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!--Custom styles for Button with Crica text and blue background -->
    <style name="CaricaCustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--Custom styles for Button with Crica text and blue background -->
    <style name="CustomWelcomeButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <!--Custom dialog for image,pdf,doc upload -->
    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--Custom style for Saved file-->
    <style name="CustomSaveFileText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <!--<item name="android:text">"Immagine acquisita"</item>-->
        <item name="android:text">"file selezionato"</item>
    </style>

    <style name="ButtonSelector">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bottom_menu_item_background_selector</item>
    </style>
</resources>
