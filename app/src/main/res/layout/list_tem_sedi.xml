<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSedi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyFaint"
    android:orientation="vertical">

    <com.ebveneto.custom_views.CustomTextViewLight
        android:id="@+id/tvSedeItemAddress"
        style="@style/MediumBlackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_icons_location"
        android:drawableRight="@mipmap/edit"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorWhite" />


</LinearLayout>